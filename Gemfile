source "https://rubygems.org"

# --- CORE ---
# Upgrades you to Jekyll 4.3+ (Faster, Modern Sass)
gem "jekyll", "~> 4.3"

# --- THEME ---
gem "jekyll-swiss"

# --- PLUGINS ---
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-paginate"
end

# --- LOCAL DEVELOPMENT ---
# Required for running 'jekyll serve' on Ruby 3.0+
gem "webrick"